# ServiceHub API Environment Variables

# Application
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000;https://+:5001

# Security
ENCRYPTION_KEY=your-encryption-key-here-change-in-production-minimum-32-chars

# Azure Service Bus (Optional - can be added via API)
# SERVICEBUS_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=YOUR-KEY

# AI Service (Optional - for anomaly detection features)
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_ENABLED=false

# Logging
LOG_LEVEL=Information

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PERMIT_LIMIT=100
RATE_LIMIT_WINDOW_SECONDS=60

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_CACHE_SECONDS=30

# Service Bus Client Settings
SERVICEBUS_CONNECTION_CACHE_MINUTES=60
SERVICEBUS_MAX_CONCURRENT_CALLS=10
SERVICEBUS_PREFETCH_COUNT=100
