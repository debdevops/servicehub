# ServiceHub API Environment Variables
# =====================================
# Copy this file to .env and fill in the values for your environment.
# 
# SECURITY WARNING:
# - Never commit .env files with real values to source control
# - Use Azure Key Vault or similar for production secrets
# - Rotate encryption keys and API keys regularly

# Application
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5153

# Security
# --------
# CRITICAL: Change this in production! Minimum 32 characters.
# Use a cryptographically secure random value.
# Example generation: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_THIS_IN_PRODUCTION_MIN_32_CHARS

# API Authentication (set to true in production)
API_AUTH_ENABLED=false
API_KEY=your-api-key-here

# Azure Service Bus
# -----------------
# SECURITY: Never use RootManageSharedAccessKey in production!
# Create a custom policy with ONLY "Listen" permission for read-only access.
# Go to Azure Portal → Service Bus → Shared access policies → Add → Check only "Listen"
#
# Example (read-only policy):
# SERVICEBUS_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=ListenOnlyPolicy;SharedAccessKey=YOUR-KEY
#
# WARNING: Connection strings with "Manage" rights will be REJECTED by the API.

# AI Service (Optional - for anomaly detection features)
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_ENABLED=false

# Logging
LOG_LEVEL=Information

# CORS (comma-separated origins)
# SECURITY: Configure specific origins in production, never use "*"
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PERMIT_LIMIT=100
RATE_LIMIT_WINDOW_SECONDS=60

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_CACHE_SECONDS=30

# Service Bus Client Settings
SERVICEBUS_CONNECTION_CACHE_MINUTES=60
SERVICEBUS_MAX_CONCURRENT_CALLS=10
SERVICEBUS_PREFETCH_COUNT=100
